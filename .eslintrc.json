{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/react-in-jsx-scope": "off" // React 17의 새로운 JSX 변환을 지원합니다
    },
    "globals": {
        "kakao": "readonly" // kakao를 전역 변수로 추가
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
